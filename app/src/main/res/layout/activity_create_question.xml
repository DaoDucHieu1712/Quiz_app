<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateQuestionActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/blue_bg">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/img_createQues"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="290dp"
            android:src="@drawable/ic_createquestion"/>

        <TextView
            android:id="@+id/tv_createQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="45dp"
            android:text="CREATE \nQUESTION"
            android:textColor="@color/white"
            android:textSize="37dp"
            android:textStyle="italic|bold"/>
    </FrameLayout>

    <EditText
        android:id="@+id/edt_titlequiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter your Question"
        android:minHeight="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/op1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="Enter option 1"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/op2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="Enter option 2"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/op3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="Enter option 3"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/op4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="Enter option 4"
            android:minHeight="48dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp">

                <RadioButton
                    android:id="@+id/solution1"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="option1" />

                <RadioButton
                    android:id="@+id/solution2"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="option2" />

                <RadioButton
                    android:id="@+id/solution3"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="option3" />

                <RadioButton
                    android:id="@+id/solution4"
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="option4" />
            </LinearLayout>
        </RadioGroup>

        <Spinner
            android:id="@+id/course_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:entries="@array/course" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#255AC5"
            android:text="Save"
            android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>

